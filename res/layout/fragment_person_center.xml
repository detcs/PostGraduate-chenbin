<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_headbar_height"
        android:background="@color/default_headbar_background"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/default_back_width"
            android:layout_height="@dimen/default_back_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/person_center_head_title"
            android:textColor="@color/default_headbar_title"
            android:textSize="@dimen/default_headbar_titlesize" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/infoView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/person_center_boyhead" />

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/idText"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/imageView2"
            android:text="Mr_xu某某"
            android:textColor="#333333"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/sexImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/nameText"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/nameText"
            android:src="@drawable/person_center_boy" />

        <TextView
            android:id="@+id/idText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignLeft="@+id/nameText"
            android:layout_marginTop="9.6dp"
            android:layout_toRightOf="@+id/imageView2"
            android:text="研大大ID：490685"
            android:textColor="#999999"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/hintImg"
            android:layout_width="@dimen/person_center_hint_width"
            android:layout_height="@dimen/person_center_hint_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/person_center_hint" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47.2dp"
        android:layout_marginTop="12dp"
        android:background="#ffffff"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="25.2dp"
            android:layout_height="25.2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/person_center_email" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/imageView4"
            android:text="@string/person_center_email" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17.6dp"
            android:layout_toRightOf="@+id/textView5"
            android:text="314784088@qq.com" />

        <TextView
            android:id="@+id/emailChangeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:text="@string/default_change"
            android:textColor="#429dd7"
            android:textSize="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setPwView"
        android:layout_width="match_parent"
        android:layout_height="47.2dp"
        android:layout_marginTop="12dp"
        android:background="#ffffff"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="25.2dp"
            android:layout_height="25.2dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/person_center_pw" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/imageView6"
            android:text="@string/person_center_pw_monitor" />

        <TextView
            android:id="@+id/pwChangeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/default_change"
            android:textColor="#429dd7"
            android:textSize="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myreserve"
        android:layout_width="match_parent"
        android:layout_height="47.2dp"
        android:layout_marginTop="12dp"
        android:background="#ffffff"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <ImageView
            android:id="@+id/backupImg"
            android:layout_width="25.2dp"
            android:layout_height="25.2dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/person_center_backup" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/backupImg"
            android:text="@string/person_center_reserve" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="@dimen/person_center_hint_width"
            android:layout_height="@dimen/person_center_hint_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/person_center_hint" />
    </RelativeLayout>

    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#e5e5e5" />

    <RelativeLayout
        android:id="@+id/checknew"
        android:layout_width="match_parent"
        android:layout_height="47.2dp"
        android:background="#ffffff"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="25.2dp"
            android:layout_height="25.2dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/person_center_checknew" />

        <ImageView
            android:id="@+id/hasNewImg"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView5"
            android:src="@drawable/person_center_reddot" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/person_center_hint_width"
            android:layout_height="@dimen/person_center_hint_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/person_center_hint" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/imageView8"
            android:text="@string/person_center_checknew" />
    </RelativeLayout>

    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#e5e5e5" />

    <RelativeLayout
        android:id="@+id/aboutus"
        android:layout_width="match_parent"
        android:layout_height="47.2dp"
        android:background="#ffffff"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <ImageView
            android:id="@+id/aboutusImg"
            android:layout_width="25.2dp"
            android:layout_height="25.2dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/person_center_aboutus" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="@dimen/person_center_hint_width"
            android:layout_height="@dimen/person_center_hint_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/person_center_hint" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/aboutusImg"
            android:text="@string/person_center_aboutus" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47.2dp"
        android:layout_marginTop="24dp"
        android:background="#ffffff"
        android:gravity="center" >

        <TextView
            android:id="@+id/logoutBu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/person_center_logout"
            android:textColor="#ec3113"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>