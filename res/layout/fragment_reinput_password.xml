<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <EditText 
	    android:id="@+id/input_new_passward"
	    android:gravity="center_horizontal"
	    android:layout_gravity="center_horizontal"
        android:layout_width="275dp"
    	android:layout_height="32dp"
    	android:background="@drawable/register_edit_shape"
    	android:hint="@string/set_new_password"
    	android:layout_marginTop="20dp"
	    />
	<EditText 
	    android:id="@+id/reinput_passward"
	    android:gravity="center_horizontal"
	    android:layout_gravity="center_horizontal"
        android:layout_width="275dp"
    	android:layout_height="32dp"
    	android:background="@drawable/register_edit_shape"
    	android:hint="@string/reinput_password"
    	android:layout_marginTop="8dp"
	    />
	<Button
          android:id="@+id/complete_reset_pwd"
		  android:gravity="center_horizontal"
		  android:layout_gravity="center_horizontal"
	      android:layout_width="match_parent"
	   	  android:layout_height="34dp"
	      android:text="@string/complete"
	      android:layout_marginTop="42dp"
	      android:layout_marginLeft="12dp"
	      android:layout_marginRight="12dp"
        />
</LinearLayout>
