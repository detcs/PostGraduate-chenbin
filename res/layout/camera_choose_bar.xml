<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="6.4dp"
    android:layout_marginTop="12dp"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/radioButton1"
        android:layout_width="@dimen/camera_item_size"
        android:layout_height="@dimen/camera_item_size"
        android:background="@drawable/camera_item"
        android:gravity="center"
        android:textColor="@color/camera_choose_word"
        android:textSize="@dimen/camera_item_text" />

    <TextView
        android:id="@+id/radioButton2"
        android:layout_width="@dimen/camera_item_size"
        android:layout_height="@dimen/camera_item_size"
        android:layout_marginLeft="40dp"
        android:background="@drawable/camera_item"
        android:gravity="center"
        android:textColor="@color/camera_choose_word"
        android:textSize="@dimen/camera_item_text" />

    <TextView
        android:id="@+id/radioButton3"
        android:layout_width="@dimen/camera_item_size"
        android:layout_height="@dimen/camera_item_size"
        android:layout_marginLeft="40dp"
        android:background="@drawable/camera_item"
        android:gravity="center"
        android:textColor="@color/camera_choose_word"
        android:textSize="@dimen/camera_item_text" />

    <TextView
        android:id="@+id/radioButton4"
        android:layout_width="@dimen/camera_item_size"
        android:layout_height="@dimen/camera_item_size"
        android:layout_marginLeft="40dp"
        android:background="@drawable/camera_item"
        android:gravity="center"
        android:textColor="@color/camera_choose_word"
        android:textSize="@dimen/camera_item_text" />

</LinearLayout>