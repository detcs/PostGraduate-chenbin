<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp" >
    
    <TextView
        android:text="@string/course_choose"
        android:layout_width="match_parent"
   		 android:layout_height="wrap_content"
   		 android:layout_gravity="center_horizontal"
   		 android:gravity="center_horizontal"
        />
     <TextView
        android:text="@string/english"
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
        />
     <View 
           android:layout_width="match_parent"
           android:layout_height="1dp" 
           android:background="#e5e5e5" 
           android:layout_marginTop="12dp"
 			/>
     <LinearLayout
         android:layout_width="match_parent"
   		 android:layout_height="wrap_content"
   		 android:orientation="horizontal"
   		 android:layout_marginTop="13dp"
         >
	    
	         <TextView
	            android:id="@+id/english1"
	            android:text="@string/english1"
	            android:layout_width="80dp"
	   		 	android:layout_height="48dp"
	   		 	android:gravity="center"
	             />
	      
	         <TextView
	            android:id="@+id/english2"
	            android:text="@string/english2"
	            android:layout_width="80dp"
	   		 	android:layout_height="48dp"
	   		 	android:gravity="center"
	   		 	android:layout_marginLeft="12dp"
	             />
	        
       </LinearLayout>
 		
 		 <TextView
	        android:text="@string/math"
	        android:layout_width="match_parent"
	   		android:layout_height="wrap_content"
	   		android:layout_marginTop="17dp"
	        />
 		  <View 
           android:layout_width="match_parent"
           android:layout_height="1dp" 
           android:background="#e5e5e5" 
           android:layout_marginTop="12dp"
 			/>
 		   <LinearLayout
		         android:layout_width="match_parent"
		   		 android:layout_height="wrap_content"
		   		 android:orientation="horizontal"
		   		 android:layout_marginTop="13dp"
		         >
	       
	         <TextView
	             android:id="@+id/math1"
	            android:text="@string/math1"
	            android:layout_width="80dp"
	   		 	android:layout_height="48dp"
	   		 	android:layout_weight="1"
	   		 	android:gravity="center"
	   		 	android:layout_marginLeft="6dp"
	   		 	android:layout_marginRight="6dp"
	             />
	        
	         <TextView
	             android:id="@+id/math2"
	            android:text="@string/math2"
	            android:layout_width="80dp"
	   		 	android:layout_height="48dp"
	   		 	android:layout_weight="1"
	   		 	android:gravity="center"
	   		 	android:layout_marginLeft="6dp"
	   		 	android:layout_marginRight="6dp"
	             />
	         
	         <TextView
	             android:id="@+id/math3"
	            android:text="@string/math3"
	            android:layout_width="80dp"
	   		 	android:layout_height="48dp"
	   		 	android:layout_weight="1"
	   		 	android:gravity="center"
	   		 	android:layout_marginLeft="6dp"
	   		 	android:layout_marginRight="6dp"
	             />
	        
       		</LinearLayout>
     		
	         <TextView
	            android:id="@+id/no_math"
	            android:text="@string/no_course"
	            android:layout_width="80dp"
	   		 	android:layout_height="48dp"
	   		 	android:layout_gravity="left"
	   		 	android:gravity="center"
	   		 	android:layout_marginTop="18dp"
	             />
	        
       	
      
     
       <TextView
        	android:text="@string/politics"
        	android:layout_width="match_parent"
   		 	android:layout_height="wrap_content"
   		 	android:layout_marginTop="17dp"
        	/>
       
        <View 
           android:layout_width="match_parent"
           android:layout_height="1dp" 
           android:background="#e5e5e5" 
           android:layout_marginTop="12dp"
 		/>
 		 
	         <TextView
	            android:id="@+id/politics"
	            android:text="@string/politics"
	            android:layout_width="80dp"
	   		 	android:layout_height="48dp"
	   		 	android:gravity="center"
	   		 	android:layout_marginTop="12dp"
	             />
	      
       
         
         <TextView
	        android:text="@string/professional_course"
	        android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:layout_marginTop="17dp"
	        />
          <View 
	           android:layout_width="match_parent"
	           android:layout_height="1dp" 
	           android:background="#e5e5e5" 
	            android:layout_marginTop="12dp"
	 			/>
          <LinearLayout 
              android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	           android:orientation="horizontal" 
	           android:layout_marginTop="12dp"
              >
	        <TextView 
	            android:id="@+id/profess_one"
	            android:text="@string/professional_one"
		        android:layout_width="wrap_content"
		   		android:layout_height="wrap_content"
		   		android:layout_weight="1" 
		   		android:layout_gravity="center_vertical"    
	             />
	        <LinearLayout 
	            android:layout_width="wrap_content"
		   		android:layout_height="wrap_content"
		   		android:layout_weight="5"
		   		android:orientation="vertical"
	            >
	         <EditText 
	            android:id="@+id/input_profess_course1"
	            android:hint="@string/input_professional_course"
		        android:layout_width="wrap_content"
		   		android:layout_height="wrap_content"
		   		android:background="@null"
		   		
	             />
	         	<View
	         	    android:layout_width="match_parent"
		   			android:layout_height="1dp"
		   			android:background="#e5e5e5"
	         	    />
	         </LinearLayout>
         </LinearLayout>
        
         <LinearLayout 
              android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	           android:orientation="horizontal" 
              >
	        <TextView 
	            android:id="@+id/profess_two"
	            android:text="@string/professional_two"
		        android:layout_width="wrap_content"
		   		android:layout_height="wrap_content"
		   		android:layout_weight="1"
		   		android:layout_gravity="center_vertical"
	             />
	        <LinearLayout 
	            android:layout_width="wrap_content"
		   		android:layout_height="wrap_content"
		   		android:layout_weight="5"
		   		android:orientation="vertical"
	            >
	         <EditText 
	            android:id="@+id/input_profess_course2"
	            android:hint="@string/input_professional_course"
		        android:layout_width="wrap_content"
		   		android:layout_height="wrap_content"
		   		android:background="@null"
	             />
	         <View
	         	    android:layout_width="match_parent"
		   			android:layout_height="1dp"
		   			android:background="#e5e5e5"
	         	    />
	         </LinearLayout>
         </LinearLayout>
          <Button
            android:id="@+id/complete_choose"
            android:text="@string/complete"
            android:layout_width="match_parent"
   		 	android:layout_height="wrap_content"
   		 	android:textColor="#ffffff"
   		 	android:layout_gravity="bottom"
   		 	android:layout_marginTop="12dp"
             />
</LinearLayout>
