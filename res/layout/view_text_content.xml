			    	android:ellipsize="end"
		           />
	        	<TextView
	        	    android:id="@+id/extends_img"
		            android:layout_gravity="bottom|right"
		            android:background="@drawable/look_all"
			        android:layout_width="50dp"
			    	android:layout_height="20dp"
		           />
	        	
	       </FrameLayout>
