	android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_gravity="top"
    android:alpha="1"
    android:orientation="vertical"> 
   		
	        	<TextView
		            android:id="@+id/text_remark_content"
		            android:text="remark_context"
			        android:layout_width="match_parent"
