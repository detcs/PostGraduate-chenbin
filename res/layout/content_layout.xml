<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/blur_img"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:scaleType="fitXY"
        />
	<LinearLayout
	     android:layout_width="match_parent"
    	 android:layout_height="match_parent"
    	 android:background="#000000"
    	 android:alpha="0.5"
	    />
    <com.view.util.DragImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/div_main"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY" />
    <LinearLayout 
        android:id="@+id/browse_top"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_gravity="top"
    	android:orientation="horizontal"
        >
        <TextView
             android:id="@+id/browse_top_center"
             android:text="center"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_gravity="center_horizontal"
    		
            />
    </LinearLayout>
    <LinearLayout 
        
        android:layout_width="match_parent"
    	android:layout_height="100dp"
    	android:layout_gravity="bottom"
    	android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/browse_bottom"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:layout_weight="2"
            >
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:layout_alignParentBottom="true"
    		android:paddingBottom="10dp"
    		android:layout_weight="1"
            >
            <ImageView 
                android:id="@+id/important_img"
                android:layout_width="80dp"
    			android:layout_height="30dp"
    			android:scaleType="fitXY"
    			android:layout_weight="1"
    			android:layout_gravity="center"
                />
            <ImageView 
                android:id="@+id/rotate_img"
                android:layout_width="80dp"
    			android:layout_height="30dp"
    			android:layout_weight="1"
    			android:scaleType="fitXY"
    			android:paddingLeft="10dp"
    			android:layout_gravity="center"
                />
            <ImageView 
                android:id="@+id/remark_img"
                android:layout_width="80dp"
    			android:layout_height="30dp"
    			android:layout_weight="1"
    			android:scaleType="fitXY"
    			android:paddingLeft="10dp"
    			android:layout_gravity="center"
                />
            </LinearLayout>
    </LinearLayout>
    <!-- edit remark -->
 	<LinearLayout
            android:id="@+id/browse_remark_edit_hideBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:visibility="invisible" >

            <RelativeLayout
                android:id="@+id/browse_remark_edit_hideChoose"
                android:layout_width="match_parent"
                android:layout_height="@dimen/camera_hide_edit_bar_height"
                android:background="#ffffff"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/browse_remark_edit_quitView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/camera_edit_quit"
                    android:textColor="@color/camera_top_bar_word"
                    android:textSize="@dimen/clickable_words_size" />

                <TextView
                    android:id="@+id/browse_remark_edit_saveView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/camera_edit_save"
                    android:textColor="@color/camera_top_bar_word"
                    android:textSize="@dimen/clickable_words_size" />
            </RelativeLayout>

            <EditText
                android:id="@+id/browse_remark_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:ems="10"
                android:gravity="top"
                android:lines="4"
                android:minHeight="@dimen/camera_edit_min_height"
                android:textColor="#000000" />
        </LinearLayout>
</FrameLayout>