<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <ImageView
            android:id="@+id/headView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:src="@drawable/default_head" />

        <TextView
            android:id="@+id/nickNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15.2dp"
            android:layout_toRightOf="@+id/headView"
            android:text="nickName"
            android:textSize="@dimen/name_size" />

        <TextView
            android:id="@+id/timeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nickNameView"
            android:layout_below="@+id/nickNameView"
            android:layout_marginTop="3.2dp"
            android:text="time" />

        <ImageView
            android:id="@+id/sexImage"
            android:layout_width="17.6dp"
            android:layout_height="17.6dp"
            android:layout_alignBottom="@+id/nickNameView"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/nickNameView"
            android:src="@drawable/square_boy" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.2dp"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <TextView
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7.2dp"
            android:text="title" />

        <TextView
            android:id="@+id/contentView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="27.2dp"
        android:background="#f2f2f2"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <ImageView
            android:id="@+id/shareView"
            android:layout_width="60dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/moreView"
            android:src="@drawable/square_share" />

        <ImageView
            android:id="@+id/moreView"
            android:layout_width="60dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/square_more" />
    </RelativeLayout>

</LinearLayout>