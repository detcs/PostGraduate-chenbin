<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10.4dp"
            android:layout_marginRight="10.4dp"
            android:background="@drawable/person_info_getimg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/default_takephoto"
                android:textColor="#1f76dc"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/person_headset_album"
                android:textColor="#1f76dc"
                android:textSize="18dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10.4dp"
            android:layout_marginRight="10.4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/person_info_getimg_cancel"
            android:gravity="center"
            android:text="@string/default_quit"
            android:textColor="#ec3113"
            android:textSize="18dp" />
    </LinearLayout>

</RelativeLayout>