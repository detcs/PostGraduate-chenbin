<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	     >
	     <!-- 
	     <FrameLayout
	          android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:layout_weight="3"
	         >
	          -->
	          <ProgressBar 
	                android:id="@+id/progress_horizontal"
			        style="?android:attr/progressBarStyleHorizontal"
			        android:layout_width="match_parent"
			        android:layout_height="1dp"
			        android:max="100"
			        android:progress="0"
			        android:progressDrawable="@drawable/progressbar"
			        android:visibility="visible"
		         />
		    <ImageView
		            android:id="@+id/review_img"
			        android:layout_width="match_parent"
			    	android:layout_height="match_parent"
			    	android:scaleType="fitXY"
			    	android:layout_marginBottom="200dp"
		        />
		</LinearLayout>
		<LinearLayout
	          android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:layout_gravity="bottom"
			  android:orientation="vertical"
	         >
		    <FrameLayout
	            android:layout_width="match_parent"
		    	android:layout_height="wrap_content" 
		    	android:background="#ffffff"
		    	> 
	        	<TextView
		            android:id="@+id/remark_content"
		            android:text="remark_context"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:lines="2"
			    	android:ellipsize="end"
			    	android:layout_gravity="top"
			    	android:textColor="#333333"
			    	android:textSize="15sp"
			    	android:layout_marginLeft="12dp"
			    	android:layout_marginRight="12dp"
			    	android:scrollbars="vertical"
		           />
	        	  </FrameLayout>
	        	<TextView
	        	    android:id="@+id/extends_btn"
		            android:layout_gravity="right"
		            android:background="@drawable/look_all"
			        android:layout_width="50dp"
			    	android:layout_height="15dp"
			    	android:layout_marginRight="12dp"
			    	android:layout_marginTop="5dp"
		           />
	     
	       <!-- 
	    </FrameLayout>
	     -->
	     <!-- mark rotate edit-->
	    <RelativeLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:paddingTop="10dp"
	    	android:paddingBottom="5dp"
	    	android:background="#ffffff"
	    	>
	    <LinearLayout
	       	android:orientation="horizontal"
	       	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentRight="true"
	    	android:layout_marginBottom="16dp"
	    	android:layout_marginRight="12dp"
		       >
		       <ImageView
		           	android:id="@+id/review_flag_img"
		            android:layout_width="32dp"
		    		android:layout_height="50dp"
		    		android:scaleType="fitXY"
		           />
		       <ImageView
		           	android:id="@+id/review_rotate_img"
		            android:layout_width="32dp"
		    		android:layout_height="50dp"
		    		android:layout_marginLeft="15dp"
		    		android:scaleType="fitXY"
		           />
		       <ImageView
		           	android:id="@+id/edit_remark_img"
		            android:layout_width="32dp"
		    		android:layout_height="50dp"
		    		android:layout_marginLeft="15dp"
		    		android:scaleType="fitXY"
		           />
		       </LinearLayout> 
	       </RelativeLayout>
	      <!-- master unmaster --> 
		<LinearLayout
	       	android:id="@+id/direction_choose"
	       	android:orientation="horizontal"
	       	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="bottom"
	       >
	       <TextView
	           	android:id="@+id/master"
	            android:text="@string/master"
	            android:layout_width="match_parent"
	    		android:layout_height="48dp"
	    		android:layout_weight="1"
	    		android:gravity="center"
	    		android:textColor="#ffffff"
	    		android:textSize="12sp"
	           />
	       <TextView
	           	android:id="@+id/unmaster"
	            android:text="@string/unmaster"
	            android:layout_width="match_parent"
	    		android:layout_height="48dp"
	    		android:layout_weight="1"
	    		android:gravity="center"
	    		android:textColor="#ffffff"
	    		android:textSize="12sp"
	           />
	       </LinearLayout>  
	 </LinearLayout>
<!-- edit remark -->
 	<LinearLayout
            android:id="@+id/remark_edit_hideBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:visibility="invisible" >

            <RelativeLayout
                android:id="@+id/remark_edit_hideChoose"
                android:layout_width="match_parent"
                android:layout_height="@dimen/camera_hide_edit_bar_height"
                android:background="#ffffff"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/remark_edit_quitView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/camera_edit_quit"
                    android:textColor="@color/camera_top_bar_word"
                    android:textSize="@dimen/clickable_words_size" />

                <TextView
                    android:id="@+id/remark_edit_saveView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/camera_edit_save"
                    android:textColor="@color/camera_top_bar_word"
                    android:textSize="@dimen/clickable_words_size" />
            </RelativeLayout>

            <EditText
                android:id="@+id/remark_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:ems="10"
                android:gravity="top"
                android:lines="4"
                android:minHeight="@dimen/camera_edit_min_height"
                android:textColor="#000000" />
        </LinearLayout>
</FrameLayout>