<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打印科目"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp" >

        <TextView
            android:id="@+id/sub1"
            android:layout_width="46.4dp"
            android:layout_height="33.6dp"
            android:background="@drawable/print_sub"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="14.4dp" />

        <TextView
            android:id="@+id/sub2"
            android:layout_width="46.4dp"
            android:layout_height="33.6dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/print_sub"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="14.4dp" />

        <TextView
            android:id="@+id/sub3"
            android:layout_width="46.4dp"
            android:layout_height="33.6dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/print_sub"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="14.4dp" />

        <TextView
            android:id="@+id/sub4"
            android:layout_width="46.4dp"
            android:layout_height="33.6dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/print_sub"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="14.4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19.2dp" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打印时间"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <android.widget.DatePicker
            android:id="@+id/fromdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="3.2dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.2dp"
            android:text="To"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <android.widget.DatePicker
            android:id="@+id/todata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="3.2dp" />
    </LinearLayout>

</LinearLayout>