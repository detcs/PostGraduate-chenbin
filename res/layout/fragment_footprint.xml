<?xml version="1.0" encoding="utf-8"?>
 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/scrollview"
      android:layout_width="match_parent"
	  android:layout_height="match_parent"
            > 
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
              
			    <ImageView 
			        android:src="@drawable/note_thumb"
			        android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			        />
				<LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:background="#429dd7" >
				    <LinearLayout 
				        android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:orientation="vertical"
					   	android:layout_marginLeft="17dp"
					   	android:layout_marginTop="10dp"
					   	android:layout_marginBottom="10dp"
					    >
					    <TextView
					        android:id="@+id/date_day"
					        android:text="01"
					        android:layout_width="wrap_content"
					    	android:layout_height="wrap_content"
					    	android:textColor="#ffffff"
					    	android:textSize="60sp"
					    	android:gravity="center_horizontal"
					        />
					     <TextView
					        android:id="@+id/date_month_year"
					        android:layout_width="wrap_content"
					    	android:layout_height="wrap_content"
					    	android:textColor="#ffffff"
					    	android:textSize="12sp"
					    	android:text="Jan2015"
					    	android:gravity="center_horizontal"
					    	android:layout_marginTop="1dp"
					    	android:paddingLeft="2dp"
					        />
				    </LinearLayout>
				    <LinearLayout
				        android:layout_width="0.4dp"
				    	android:layout_height="80dp"
				    	android:background="#ffffff"
				    	android:layout_marginTop="11dp"
				    	android:layout_marginLeft="8dp"
				        />
				     <LinearLayout 
				        android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:orientation="vertical"
					   	android:layout_marginLeft="8dp"
					   	android:layout_marginTop="10dp"
					   	android:layout_marginBottom="10dp"
					    >
						    <TextView
						        android:id="@+id/day_review_info"
						        android:text="@string/diary"
						        android:layout_width="wrap_content"
						    	android:layout_height="wrap_content"
						    	android:textColor="#ffffff"
						    	android:textSize="14sp"
						        />
						     <TextView
						        android:id="@+id/day_diary"
						        android:text="@string/diary"
						        android:layout_width="wrap_content"
						    	android:layout_height="wrap_content"
						    	android:textColor="#ffffff"
						    	android:textSize="12sp"
						        />
						     </LinearLayout>
				  	</LinearLayout>
				  <TextView
				        android:id="@+id/append_note"
				        android:text="@string/append_note"
				        android:layout_width="wrap_content"
				    	android:layout_height="32dp"
				    	android:layout_gravity="center_horizontal"
				    	android:gravity="center"
				    	android:textColor="#333333"
				    	android:textSize="15sp"
				        />
				  <LinearLayout
				      	android:layout_width="match_parent"
				    	android:layout_height="0.4dp"
				    	android:background="#e5e5e5"
				    	android:layout_marginLeft="12dp"
				    	android:layout_marginRight="12dp"
				      />
				  <com.pages.notes.NoScrollListView
				      android:id="@+id/footprint_list"
				      android:layout_width="match_parent"
				      android:layout_height="wrap_content"
				      android:divider="@null"
				      android:layout_marginTop="12dp"
				      />
		
	</LinearLayout>
</ScrollView>