<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="17.2dp"
        android:paddingRight="17.2dp"
        android:paddingTop="24dp" >

        <Button
            android:id="@+id/reportBu"
            android:layout_width="265.6dp"
            android:layout_height="36dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/square_report" />

        <Button
            android:id="@+id/quitBu"
            android:layout_width="265.6dp"
            android:layout_height="36dp"
            android:background="@drawable/square_quit" />
    </LinearLayout>

</RelativeLayout>